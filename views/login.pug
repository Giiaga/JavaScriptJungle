extends layout
include utils
block content
    div.wholePageContainer
        h1(id="heading")=title
        div.pageWidthContainer
            .container
                if errors
                    div#errorDiv
                        ul.errorsList
                            each error in errors
                                li=error
                div#formContainer
                    form(action="/login" method="post" id="form")
                        label(for="userName" id="labelUser" class="formLabel") User Name
                        +field("userName", "text", "userName")
                        label(for="password" id="labelPass" class="formLabel") Password
                        +field("password", "password", "password")
                        input(type="submit" value="Log In" id="loginButton")
                        a(href="/signup" id="signupLink"  class="formLabel") Sign Up
