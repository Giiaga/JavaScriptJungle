extends layout.pug
block content
    .threadContainer
        .questionTitle
            h1= title
        .post.question
            .body
                p=threadQuestion.body
            .bodyScore
                i#voteUp.votingbutton.fas.fa-chevron-up
                p.score=threadQuestion.score
                i#voteDown.votingbutton.fas.fa-chevron-down
                p.label Likes
        if threadAnswers
            each answer in threadAnswers
                .post.answer
                    .body
                        p=answer.body
                    .bodyScore
                        p=answer.score
                        p Score
